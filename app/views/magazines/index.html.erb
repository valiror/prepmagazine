<div class="row-fluid main">
		<div class="row-fluid">
		<h1>List of Magazines</h1>
				<table class="table table-responsive">
					<thead>
						<tr>
							<th>Name</th>							
						</tr>
					</thead>
					<tbody>
						<% @magazines.each do |magazine| %>
				         <tr>
						<td><%= magazine.name%></td>					
						<td><%= link_to 'Show', magazine_path(magazine),class: "btn btn-primary" %></td>
				       <td><%= link_to 'Edit', edit_magazine_path(magazine),class: "btn btn-primary" %></td>
				       <td><%= link_to 'Destroy', magazine_path(magazine),
				              method: :delete,
				              data: { confirm: 'Are you sure?' },class: "btn btn-primary" %></td>
						
				        </tr>
						<%end%>
					</tbody>
				</table>
		</div>
		<div class="row-fluid ">
		<%= link_to "New",new_magazine_path,:class => "btn btn-primary"%>
		</div>
</div>